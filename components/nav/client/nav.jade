template(name='top_nav')
    .ui.inverted.menu
        .right.menu
            .item 
                i.university.icon
                |Academy
            if is_dev
                .red.item Development Mode
            if currentUser
                if isInRole 'admin'
                    a.item(href='/admin/' class="{{isActivePath '/admin/'}}")
                        i.configure.icon
                        | Admin
                a.item(href="/profile/edit" class="{{isActivePath '/profile/edit'}}")
                    if currentUser.profile.image_id
                        img.ui.avatar.image(src="{{c.url currentUser.profile.image_id width=50 height=50 gravity='face' crop='fill'}}")
                    else
                        i.user.icon
                    if currentUser.profile.name
                        | #{currentUser.profile.name}
                    else
                        | Profile
                a#logout.ui.item(href='#') 
                    i.sign.out.icon
                    |Sign Out
            else
                a.ui.item(href='/sign-in') 
                    i.sign.in.icon
                    |Sign In
                a.ui.item(href='/sign-up') 
                    i.add.user.icon
                    |Register
    a(href='/' class="{{isActivePath '/'}}")
        img.header-logo(src="{{c.url 'ih_logo'}}")


template(name='nav')
    .ui.container
        .red-nav-bar
            .ui.red.inverted.five.item.stackable.menu
                a.item(href='/about_academy' class="{{isActivePath '/about_academy'}}")
                    strong About the Academy
                a.item(href='/global_network' class="{{isActivePath '/global_network'}}")
                    strong Global Network
                a.item(href='/get_involved' class="{{isActivePath '/get_involved'}}")
                    strong Get Involved
                a.item(href='/events' class="{{isActivePath '/events'}}")
                    strong Events Calendar
                a.item(href='/program_themes' class="{{isActivePath '/program_themes'}}")
                    strong Program Themes
                    