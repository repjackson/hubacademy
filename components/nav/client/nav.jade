template(name='top_nav')
    .ui.inverted.menu
        .right.menu
            .item 
                i.university.icon
                |Academy
            if is_dev
                .item Development Mode
            if currentUser
                if isInRole 'admin'
                    a.item(href='/admin/' class="{{isActivePath '/admin/'}}")
                        i.configure.icon
                        | Admin
                a.item(href="/profile/edit" class="{{isActivePath '/profile/edit'}}")
                    if currentUser.profile.image_id
                        img.ui.avatar.image(src="{{c.url currentUser.profile.image_id width=50 height=50 gravity='face' crop='fill'}}")
                    else
                        i.user.icon
                    if currentUser.profile.name
                        | #{currentUser.profile.name}
                    else
                        | Profile
                a#logout.ui.item(href='#') 
                    i.sign.out.icon
                    |Sign Out
            else
                a.ui.item(href='/sign-in') 
                    i.sign.in.icon
                    |Sign In
    a(href='/' class="{{isActivePath '/'}}")
        img.header-logo(src="{{c.url 'ih_logo'}}")


template(name='academy_nav')
    .ui.inverted.borderless.stackable.menu.academy_nav
        .ui.container
            a.header.item(href='/' class="{{isActivePath '/'}}")
                i.large.university.icon
                strong Impact Hub Academy
            if is_dev
                .item Development Mode
            .right.menu
                a.item(href='/about' class="{{isActivePath '/about'}}")
                    strong About
                a.item(href='/events' class="{{isActivePath '/events'}}")
                    strong Events
                a.item(href='/global' class="{{isActivePath '/global'}}")
                    strong Global
                // a.item(href='/program_themes' class="{{isActivePath '/program_themes'}}")
                //     strong Program Themes
                a.item(href='/sponsors' class="{{isActivePath '/sponsors'}}")
                    strong Sponsors
                a.item(href='/enroll' class="{{isActivePath '/enroll'}}")
                    .ui.basic.white.inverted.large.button Enroll
                a.item(href='/donate' class="{{isActivePath '/donate'}}")
                    .ui.basic.white.inverted.large.button Donate